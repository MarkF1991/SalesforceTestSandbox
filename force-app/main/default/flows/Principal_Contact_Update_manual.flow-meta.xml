    <formulas>
        <name>EmailRole</name>
        <dataType>String</dataType>
        <expression>LEFT({!sObjContact_Principal.Email},FIND({!sObjContact_Principal.Email},&quot;@&quot;)-1)</expression>
    </formulas>
    <formulas>
        <name>EmailType_MismatchError</name>
        <dataType>String</dataType>
        <expression>IF({!Email_Type}=&quot;EmailType_Not_Specified&quot;,&quot;Please select the Email Type&quot;,IF({!Email_Type}!={!IsPersonalised},&quot;The Email Type selected does not match i.e. is either not Role Based or alternatively Personalised&quot;,&quot;&quot;))</expression>
    </formulas>
    <formulas>
        <name>IsPersonalised</name>
        <dataType>String</dataType>
        <expression>IF(CONTAINS({!Principal_Email},&quot;principal&quot;),&quot;Role Based&quot;,
IF(CONTAINS({!Principal_Email},&quot;headmaster&quot;),&quot;Role Based&quot;,
IF(CONTAINS({!Principal_Email},&quot;rector&quot;),&quot;Role Based&quot;,
IF(CONTAINS({!Principal_Email},&quot;admin&quot;),&quot;Role Based&quot;,
IF(CONTAINS({!Principal_Email},&quot;tumuaki&quot;),&quot;Role Based&quot;,
IF(CONTAINS({!Principal_Email},&quot;enquiries&quot;),&quot;Role Based&quot;,
IF(CONTAINS({!Principal_Email},&quot;master&quot;),&quot;Role Based&quot;,
IF(CONTAINS({!Principal_Email},&quot;office&quot;),&quot;Role Based&quot;,&quot;Personalised&quot;))))))))</expression>
    </formulas>
    <formulas>
        <name>OrgPhone_Principal</name>
        <dataType>String</dataType>
        <expression>IF({!sObjContact_Principal.OtherPhone}&lt;&gt;&quot;&quot;,{!sObjContact_Principal.OtherPhone},{!sObjAccount.Phone})</expression>
    </formulas>
    <formulas>
        <name>PhoneNo</name>
        <dataType>String</dataType>
        <expression>IF({!sObjContact_Principal.Phone}&lt;&gt;&quot;&quot;,{!sObjContact_Principal.Phone},IF({!sObjContact_Principal.Organisation_Phone_Number__c}&lt;&gt;&quot;&quot;,{!sObjContact_Principal.Organisation_Phone_Number__c},IF({!sObjAccount.Phone}&lt;&gt;&quot;&quot;,{!sObjAccount.Phone},&quot;&quot;)))</expression>
    </formulas>
    <formulas>
        <name>Status_Icon</name>
        <dataType>String</dataType>
        <expression>IF({!UpdateAge} &lt;= 183,{!Green_Light},
IF(AND({!UpdateAge} &gt; 183,{!UpdateAge} &lt; 365),{!Green_Light},
IF({!UpdateAge} &gt; 365,{!RedLight},&quot;&quot;)))</expression>
    </formulas>
    <formulas>
        <name>UpdateAge</name>
        <dataType>Number</dataType>
        <expression>Today()-{!sObjContact_Principal.Last_Update__c}</expression>
        <scale>0</scale>
    </formulas>
