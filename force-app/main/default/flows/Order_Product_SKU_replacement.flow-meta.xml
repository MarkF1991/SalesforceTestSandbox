            <conditions>
                <leftValueReference>Get_Pricebook_Entry</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Create_replacement_order_item</targetReference>
            </connector>
            <label>Yes - PriceBookEntry found</label>
        </rules>
    </decisions>
