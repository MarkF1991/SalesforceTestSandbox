    <decisions>
        <name>ER_and_Charge_to_MOE</name>
        <label>ER and Charge to MOE?</label>
        <locationX>318</locationX>
        <locationY>134</locationY>
        <defaultConnectorLabel>No</defaultConnectorLabel>
        <rules>
            <name>Yes</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Order.Charge_To__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>MOE</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Order.Contract.Programme__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Equipment Replacement and Secure Access</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Get_Replacement_Product</targetReference>
            </connector>
            <label>Yes</label>
        </rules>
    </decisions>
    <decisions>
        <description>Is the a pricebook entry for the replacement SKU in the pricebook?</description>
        <name>Pricebook_Entry_Found</name>
