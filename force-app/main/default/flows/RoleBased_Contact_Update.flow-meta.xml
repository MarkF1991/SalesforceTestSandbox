        <dataType>String</dataType>
        <expression>IF({!sObjContact_Principal.Id}=&quot;&quot;,{!No_PrincipalDetails},
IF({!sObjContact_Principal.Email}=&quot;&quot;,{!Footnote_Alert},
IF({!UpdateAge} &lt;= 183,{!Footnote_Green},
IF(AND({!UpdateAge} &gt; 183,{!UpdateAge} &lt; 365),{!Footnote_Amber},
IF({!UpdateAge} &gt; 365,{!Footnote_Red},&quot;&quot;)))))</expression>
    </formulas>
    <formulas>
        <name>IsPersonalised</name>
        <dataType>String</dataType>
        <expression>IF(CONTAINS({!Principal_Email},&quot;principal&quot;),&quot;Role Based&quot;,
IF(CONTAINS({!Principal_Email},&quot;headmaster&quot;),&quot;Role Based&quot;,
IF(CONTAINS({!Principal_Email},&quot;rector&quot;),&quot;Role Based&quot;,
IF(CONTAINS({!Principal_Email},&quot;admin&quot;),&quot;Role Based&quot;,
IF(CONTAINS({!Principal_Email},&quot;tumuaki&quot;),&quot;Role Based&quot;,
IF(CONTAINS({!Principal_Email},&quot;enquiries&quot;),&quot;Role Based&quot;,
IF(CONTAINS({!Principal_Email},&quot;master&quot;),&quot;Role Based&quot;,
IF(CONTAINS({!Principal_Email},&quot;office&quot;),&quot;Role Based&quot;,&quot;Personalised&quot;))))))))</expression>
    </formulas>
